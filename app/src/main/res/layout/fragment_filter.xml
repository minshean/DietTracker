<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.FilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/upper_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Filter By"
            android:textSize="26sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="All"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnAll"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="@string/under_200"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnUnder200"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="200 - 400 calories"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btn200To400"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="400 - 600 calories"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btn400To600"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="@string/above_600"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnAbove600"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="Vegetarian"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnVegetarian"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="Dairy Free"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnDairyFree"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="Gluten Free"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btnGlutenFree"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/checked"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>