<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86C68A"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/upper_home"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homeContainer"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bottom_bar_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonTabFirst"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:background="@drawable/icon_5"
            android:padding="12dp"
            android:layout_weight="1"
            android:src="@drawable/icon_0"/>

        <ImageView
            android:id="@+id/buttonTabSecond"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:src="@drawable/icon_1"/>

        <ImageView
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:src="@drawable/icon_2"/>

        <ImageView
            android:id="@+id/buttonTabThird"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:src="@drawable/icon_3"/>

        <ImageView
            android:id="@+id/buttonTabFourth"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:src="@drawable/icon_4"/>

    </LinearLayout>

</LinearLayout>